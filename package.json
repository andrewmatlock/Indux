{
    "name": "indux",
    "version": "0.1.0",
    "private": false,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "rimraf packages/*/dist/* dist/ src/scripts/indux.min.js",
        "build:core": "cd src && npm run build",
        "build": "npm run build:core",
        "build:packages": "npm run build --workspaces",
        "publish-packages": "node src/scripts/publish-packages.js",
        "test": "npm run test --workspaces",
        "lint": "npm run lint --workspaces"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "fs-extra": "^11.2.0",
        "jest": "^29.7.0",
        "mock-fs": "^5.4.1",
        "prompts": "^2.4.2",
        "rimraf": "^5.0.0",
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@rollup/plugin-terser": "^0.4.0",
        "rollup": "^4.0.0"
    },
    "main": "index.js",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.js"
        ],
        "modulePathIgnorePatterns": [
            "<rootDir>/dist/"
        ]
    },
    "dependencies": {
        "glob": "^11.0.2"
    }
}