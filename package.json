{
    "name": "@indux/indux",
    "version": "0.4.4",
    "private": false,
    "workspaces": [
        "templates/starter"
    ],
    "main": "src/scripts/indux.js",
    "style": "src/styles/indux.css",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "clean": "rimraf src/scripts/indux.js src/scripts/indux.quickstart.js src/styles/indux.css src/styles/indux.min.css src/styles/indux.code.min.css dist",
        "build": "cd src && node scripts/build.js && rollup -c rollup.config.mjs",
        "build:docs": "echo 'Docs is a static website - no build needed'",
        "start:src": "cd src && browser-sync start --config bs-config.js",
        "start:docs": "cd docs && browser-sync start --config bs-config.js",
        "start:starter": "cd templates/starter && browser-sync start --config bs-config.js --port 3001",
        "publish:starter": "cd packages/create-starter && npm publish",
        "prepublishOnly": "npm run build",
        "test": "echo 'No tests configured'",
        "lint": "echo 'No linting configured'"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.1",
        "@rollup/plugin-node-resolve": "^15.3.0",
        "@rollup/plugin-terser": "^0.4.4",
        "browser-sync": "^3.0.3",
        "cssnano": "^7.1.1",
        "fs-extra": "^11.2.0",
        "prompts": "^2.4.2",
        "rimraf": "^5.0.0",
        "rollup": "^4.24.2"
    },
    "keywords": [
        "frontend",
        "framework",
        "css",
        "javascript",
        "ui",
        "components",
        "responsive",
        "modern"
    ],
    "author": "Andrew Matlock",
    "license": "MIT",
    "description": "A modern, lightweight frontend framework with built-in components and utilities",
    "homepage": "https://github.com/andrewmatlock/indux",
    "repository": {
        "type": "git",
        "url": "https://github.com/andrewmatlock/indux.git"
    },
    "bugs": {
        "url": "https://github.com/andrewmatlock/indux/issues"
    },
    "dependencies": {
        "commander": "^14.0.1",
        "glob": "^11.0.2"
    }
}
