{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Indux",
  "theme": "mint",
  "logo": {
    "dark": "/logo/indux-dark.svg",
    "light": "/logo/indux-light.svg"
  },
  "colors": {
    "primary": "#C27F20",
    "light": "#F9D7A7",
    "dark": "#8C8478"
  },
  "background": {
    "decoration": "gradient"
  },
  "icons": {
    "library": "lucide"
  },
  "navbar": {
    "links": [],
    "primary": {
      "type": "github",
      "href": "https://github.com/andrewmatlock/indux"
    }
  },
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "getting-started/introduction",
          "getting-started/setup",
          "getting-started/starter-project",
          "getting-started/compatability",
          "getting-started/accessibility"
        ]
      },
      {
        "group": "Plugins",
        "pages": [
          "plugins/color-themes",
          "plugins/components",
          "plugins/content-collections",
          "plugins/dropdowns",
          "plugins/icons",
          "plugins/localization",
          "plugins/markdown",
          "plugins/resizer",
          "plugins/routing",
          "plugins/slides",
          "plugins/toasts",
          "plugins/tooltips",
          "plugins/url-queries"
        ]
      },
      {
        "group": "Styles",
        "pages": [
          "styles/reset",
          "styles/theme",
          "styles/utilities",
          "styles/layout"
        ]
      },
      {
        "group": "UI Elements",
        "pages": [
          {
            "group": "Basics",
            "pages": [
              "elements/text",
              "plugins/icons",
              "elements/dividers",
              "elements/containers",
              "elements/tables"
            ]
          },
          {
            "group": "Forms",
            "pages": [
              "elements/buttons",
              "elements/inputs",
              "elements/textareas",
              "elements/checkboxes",
              "elements/radios",
              "elements/selects",
              "elements/switches",
              "plugins/toasts",
              "plugins/tooltips"
            ]
          },
          {
            "group": "Menus",
            "pages": [
              "elements/accordions",
              "plugins/dropdowns",
              "elements/modals",
              "elements/tabs"
            ]
          },
          {
            "group": "Navigation",
            "pages": [
              "elements/navigation/headers",
              "elements/navigation/footers",
              "elements/navigation/drawers"
            ]
          }
        ]
      },
      {
        "group": "Publishing",
        "pages": [
          "publishing/seo",
          "publishing/websites",
          "publishing/apps"
        ]
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "chatgpt",
      "claude"
    ]
  },
  "footer": {
    "socials": {
      "discord": "https://x.com/mintlify",
      "github": "https://github.com/mintlify"
    }
